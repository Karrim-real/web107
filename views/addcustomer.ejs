            <p>Username (Email Address)</p>
          <input type="text" id="usrname" name="usrname" required></input>
            <p>Password</p>
               <input type="password" id="psw" name="psw" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required></input>

            <input type="submit" name="psw" value="Add">
            
